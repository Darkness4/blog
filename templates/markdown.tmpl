{{ `{{define "head"}}` }}
<title>{{ .Title }}</title>
<style>
  {{ .Style }}
</style>
{{ `{{ end }}` }}

{{ `{{define "body"}}` }}
<main>
  <article>
    <center>
      <hgroup>
        <h1>{{ .Title }}</h1>
      </hgroup>
    </center>
    <main>
    TODO: add published date TODO: support images
    {{ .Body }}
    </main>
  </article>
  <nav style="direction: rtl">
    {{- if .Prev }}
    <a href="{{ .Prev }}">Previous</a>
    {{- else }}
    <a></a>
    {{- end }}
    {{- if .Next }}
    <a href="{{ .Next }}">Next</a>
    {{- end }}
  </nav>
</main>
{{ `{{ end }}` }}
